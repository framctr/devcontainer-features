{
    "id": "utils",
    "version": "1.0.0",
    "name": "Utilities",
    "documentationURL": "https://github.com/framctr/devcontainer-features/tree/main/src/utils",
    "description": "Install an up-to-date version of various utilities.",
    "options": {
        "ping": {
            "type": "boolean",
            "default": true,
            "description": "Install ping"
        },
        "ipcalc": {
            "type": "boolean",
            "default": true,
            "description": "Install ipcalc"
        },
        "curl": {
            "type": "boolean",
            "default": true,
            "description": "Install curl"
        },
        "wget": {
            "type": "boolean",
            "default": true,
            "description": "Install wget"
        },
        "pip": {
            "type": "boolean",
            "default": true,
            "description": "Install pip"
        },
        "jq": {
            "type": "boolean",
            "default": true,
            "description": "Install jq"
        },
        "yq": {
            "type": "boolean",
            "default": true,
            "description": "Install yq"
        },
        "extra_apt_packages": {
            "type": "string",
            "default": "",
            "description": "Extra apt packages comma or space separated"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}